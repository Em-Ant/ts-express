{
  "name": "ts-express-boilerplate",
  "version": "1.0.0",
  "description": "typescript node/express template",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf ./dist && tsc",
    "start": "node dist",
    "ensure-dist": "if [ ! -e ./dist/index.js ]; then tsc; fi",
    "start:dev": "npm run ensure-dist && concurrently -k -p \"[{name}]\" -n \"typescript,nodemon\" -c \"yellow,cyan\" \"tsc -w\" \"nodemon dist/\""
  },
  "author": "Em-Ant",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  }
}
